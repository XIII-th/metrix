<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="listVm"
                type="com.xiiilab.metrix.viewmodel.ListViewModel"/>

        <variable
                name="itemVm"
                type="com.xiiilab.metrix.viewmodel.ItemViewModel"/>

        <variable
                name="listener"
                type="com.xiiilab.metrix.fragment.list.OpenMetricListener"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:onClickListener="@{() -> listener.onClick(itemVm.entity)}">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@{itemVm.entity.title}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text='@{String.valueOf(itemVm.entity.counter)}'/>
    </LinearLayout>
</layout>
