<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="vm"
                type="com.xiiilab.ping.viewmodel.EditViewModel"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ip_address_hint"
                app:error="@{vm.ipError}"
                app:errorEnabled="@{vm.ipError != null}">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.entity.host}"
                    android:enabled="@{vm.newEntity}"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/host_title">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.entity.title}"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ping_frequency"
                app:error="@{vm.frequencyError}"
                app:errorEnabled="@{vm.frequencyError != null}">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.entity.frequency}"
                    android:inputType="number"
                    android:maxLength="@integer/timeout_number_length"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ping_timeout"
                app:error="@{vm.timeoutError}"
                app:errorEnabled="@{vm.timeoutError != null}">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.entity.timeout}"
                    android:inputType="number"
                    android:maxLength="@integer/timeout_number_length"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</layout>